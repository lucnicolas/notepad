<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Notepad.Views.NoteListView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Vos notes">

    <ContentPage.ToolbarItems>
        <ToolbarItem Clicked="ToolbarItem_Clicked" Text="Créer">
            <ToolbarItem.IconImageSource>
                <FontImageSource
                    FontFamily="FA-R"
                    Glyph="&#xf0fe;"
                    Color="{StaticResource TextColor}" />
            </ToolbarItem.IconImageSource>

        </ToolbarItem>
    </ContentPage.ToolbarItems>



    <StackLayout>
        <ListView
            x:Name="noteList"
            ItemTapped="noteList_ItemTapped"
            SelectionMode="None"
            SeparatorColor="{StaticResource PrimaryColor}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Detail="{Binding Id}" Text="{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>


</ContentPage>